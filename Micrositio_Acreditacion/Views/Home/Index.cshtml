                                <ul class="list-unstyled pricing-content"></ul><a href='@Url.Action("Index","Empleado")' class="btn btn-dark rounded-0">IR</a>
                            </div>
                        </div>


                    </div>

                    <div class="row text-center mt-2 d-flex align-self-center mr-3 mr-md-0 mb-1">
                        <div class="offset-lg-1 col-md-5 col-sm-12 col-lg-4">
                            <div class="pricingTable">
                                <span class="icon"><i class="fas fa-table"></i></span>
                                <div class="pricingTable-header">
                                    <h1 class="title">Gestione sus </h1><span class="price-value">haberes</span>
                                </div>
                                <ul class="list-unstyled pricing-content"></ul><a href='@Url.Action("SeleccionarConvenioView","Home")' class="btn btn-dark rounded-0">IR</a>
                            </div>
                        </div>
                        <div class="col-md-5 col-sm-12 col-lg-4">
                            <div class="pricingTable">
                                <span class="icon"><i class="fas fa-file-alt"></i></span>
                                <div class="pricingTable-header">
                                    <h1 class="title">Obtenga su </h1><span class="price-value">reporte</span>
                                </div>
                                <ul class="list-unstyled pricing-content"></ul><a href='@Url.Action("AnalisisReporte","Empleado")' class="btn btn-dark rounded-0">IR</a>
                            </div>
                        </div>
                       

                    </div>
                    @*nuevo  @empresa.Menu *@ 

                    @if (@empresa.Menu == 1)
                    {
                        <div class="row text-center mt-2 d-flex align-self-center mr-3 mr-md-0 mb-1">
                            <div class="col-md-8 offset-lg-3 mt-4 col-lg-4">
                                <div class="pricingTable">
                                    <span class="icon"><i class="fas fa-folder-open"></i></span>
                                    <div class="pricingTable-header">
                                        <h1 class="title">Gestione su </h1><span class="price-value">orden de extraccion</span>
                                    </div>
                                    <ul class="list-unstyled pricing-content"></ul><a href='@Url.Action("SeleccionarOrdenView","Home")' class="btn btn-dark rounded-0">IR</a>
                                </div>
                            </div>



                        </div>
                    }
                   


                </div>
            </div>

        </div>


    </div>
